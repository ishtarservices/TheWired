{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "The Wired",
  "version": "0.1.0",
  "identifier": "app.thewired.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm --filter @thewired/client dev",
    "beforeBuildCommand": "pnpm --filter @thewired/client build"
  },
  "app": {
    "windows": [
      {
        "title": "The Wired",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
